{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "rootDir": "tests/idea/",
    "resolveJsonModule": true,
    "outDir": "tests/idea/dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  }
}